<h1>Tasks#index</h1>
<p>Find me in app/views/tasks/index.html.erb</p>


<h1>Your tasks</h1>

<% @tasks.each do |task| %>
  <h2><%= link_to task.name, task_path(task.id) %></h2>
  <%= link_to "Delete", task_path(task),
      method: :delete,
      data: { confirm: "Are you sure?" } %>
<% end %>

<br><%= link_to "Add new task", new_task_path%>
